                <HBox prefHeight="70.0" prefWidth="600.0" spacing="15" alignment="CENTER_LEFT" styleClass="topBar-hbox">

                <children>

                        <Button text="➕" fx:id="addPersonButton" />


                        <TextField promptText="🔍 Search" fx:id="searchTextField" />


                    <ComboBox fx:id="sortOptionsBox" promptText="🧹" prefWidth="40" />

                </children>
                </HBox>


                <fx:include source="person-list.fxml" />


            </children>
        </VBox>
    </children>
